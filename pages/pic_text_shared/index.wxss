@import '../pic_text/index.wxss';

.share-title {
  text-align: center;
  padding: 32rpx;
  font-size: 40rpx;
  font-weight: 600;
  background: #fff;
  border-bottom: 1px solid #eee;
}

/* pages/xxx/xxx.wxss */
/* 自定义弹窗遮罩 */
.custom-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 998;
}

/* 自定义弹窗内容（底部弹出） */
.custom-modal-content {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  padding: 20rpx;
  box-sizing: border-box;
  z-index: 999;
  max-height: 80vh; /* 限制最大高度 */
}

/* 弹窗标题 */
.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

/* 文本区域（支持滚动） */
.modal-text-area {
  font-size: 34rpx;
  color: #666;
  line-height: 1.6;
  height: 60vh; /* 文本区域高度 */
  margin-bottom: 20rpx;
}

/* 文本样式（保留换行） */
.modal-text {
  white-space: pre-wrap; /* 关键：保留换行和空格 */
  word-wrap: break-word;
}

/* 关闭按钮 */
.modal-close-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #007aff;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}

/* 样式控制 */
.like-container {
  display: block;
  align-items: center;
  padding: 10rpx;
}

.like-icon {
  font-size: 30rpx;
  margin-right: 10rpx;
}
