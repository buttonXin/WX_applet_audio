/* 页面整体布局 */
.container {
  min-height: 100vh; padding: 40rpx 32rpx 48rpx; box-sizing: border-box; display: flex; flex-direction: column; 
  background: linear-gradient(180deg, #fff 0%, #fff 100%);
}

.top { text-align: center; margin-bottom: 24rpx; }
.slogan { font-size: 24rpx; color: #7c9087;text-align: center; }

/* 中间内容区域 */
.content-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background-color: #fff; */
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  margin-bottom: 40rpx;
}

/* 加载中样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 数据展示样式 */
.data-content {
  width: 100%;
  text-align: center;
}

.content-text {
  font-size: 42rpx;
  color: #333;
  line-height: 1.6;
}

/* 无数据样式 */
.empty-content {
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部按钮区域 */
.btn-wrap {
  width: 100%;
}

.share-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1989fa;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

.share-btn::after {
  border: none;
}