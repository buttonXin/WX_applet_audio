.page { min-height: 100vh; padding: 40rpx 32rpx 160rpx; background: linear-gradient(180deg, #f6fff9 0%, #f2f6f3 100%); box-sizing: border-box; }
.top { text-align: center; margin-bottom: 24rpx; }
.slogan { font-size: 24rpx; color: #7c9087; }
.hero { margin-top: 12rpx; }
.title { font-size: 38rpx; font-weight: 700; color: #0b5132; }
.subtitle { display: block; margin-top: 8rpx; color: #5f776a; }
.last { margin-top: 20rpx; }
.label { color: #5f776a; }
.card { margin-top: 12rpx; padding: 20rpx; border-radius: 16rpx; background: #fff; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); }
.card-row { display: flex; align-items: center; gap: 16rpx; }
.card-info { flex: 1; }
.card-title { font-size: 32rpx; font-weight: 600; color: #0b5132; }
.card-meta { margin-top: 6rpx; color: #6f8a7b; font-size: 26rpx; }
.card-time { margin-top: 4rpx; color: #7c9087; font-size: 24rpx; }
.play-btn { min-width: 170rpx; height: 72rpx; line-height: 72rpx; border-radius: 14rpx; }
.card-actions { margin-top: 14rpx; display: flex; gap: 12rpx; }
.third-btn { flex: 1; border-radius: 12rpx; }
.primary-ghost { color: #1abc8c; border: 1px solid #1abc8c; background: #f4fffa; }
.info-ghost { color: #1f72c6; border: 1px solid #1f72c6; background: #f3f8ff; }
.empty { display: block; margin-top: 16rpx; color: #9ab3a3; }
.bottom-bar { position: fixed; left: 50%; transform: translateX(-50%); bottom: 50rpx; width: calc(100% - 64rpx); display: flex; flex-direction: column; align-items: center; gap: 18rpx; }
.timer { text-align: center; font-size: 48rpx; color: #0b5132; font-family: monospace; }
.btn { width: 100%; border-radius: 50rpx; }
.primary { background: #1abc8c; color: #fff; border: none; }
.danger { background: #ff6b6b; color: #fff; border: none; }
