.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.input-text {
  width: 100%;
  height: 120rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.preview-container {
  width: 600rpx;
  height: 800rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  box-sizing: border-box;
}

.preview-card {
  width: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 40rpx;
}

.text-img-area {
  width: 450rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.text-placeholder {
  width: 450rpx;
  height: 200rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.qrcode-area {
  width: 200rpx;
  height: 200rpx;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
  color: #fff;
}

.change-color {
  background-color: #1890ff;
}

.generate {
  background-color: #07c160;
}

.save {
  background-color: #ff7d00;
}