.page { min-height: 100vh; padding: 40rpx 32rpx 160rpx; background: linear-gradient(180deg, #fff 0%, #fff 100%); box-sizing: border-box; }
.top { text-align: center; margin-bottom: 24rpx; }
.slogan { font-size: 24rpx; color: #7c9087; }
.hero { margin-top: 12rpx; }
.title { font-size: 38rpx; font-weight: 700; color: #0b5132; }
.subtitle { display: block; margin-top: 8rpx; color: #5f776a; }
.icon-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 0 20rpx;
}

.info-icon {
  margin-left: auto;
  padding: 20rpx;
}
.last { margin-top: 200rpx; }
.label { color: #5f776a; }
.card { margin-top: 12rpx; padding: 20rpx; border-radius: 16rpx; background: #fff; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); }
.card-row { display: flex; align-items: center; gap: 16rpx; }
.card-info { flex: 1; }
.card-title { font-size: 32rpx; font-weight: 600; color: #0b5132; }
.title-hover {background: rgba(0, 0, 0, 0.05);border-radius: 8rpx;}
.card-meta { margin-top: 6rpx; color: #6f8a7b; font-size: 26rpx; }
.card-time { margin-top: 4rpx; color: #7c9087; font-size: 24rpx; }
.play-btn { min-width: 170rpx; height: 72rpx; line-height: 72rpx; border-radius: 14rpx; }
.card-actions { margin-top: 14rpx; display: flex; gap: 12rpx; }
.third-btn { flex: 1; border-radius: 12rpx; }
.primary-ghost { color: #1abc8c; border: 1px solid #1abc8c; background: #f4fffa; }
.info-ghost { color: #1f72c6; border: 1px solid #1f72c6; background: #f3f8ff; }
.empty { display: block; margin-top: 16rpx; color: #9ab3a3; }
.bottom-bar { position: fixed; left: 50%; transform: translateX(-50%); bottom: 50rpx; width: calc(100% - 64rpx); display: flex; flex-direction: column; align-items: center; gap: 18rpx; }
.timer { text-align: center; font-size: 48rpx; color: #0b5132; font-family: monospace; }
.btn { width: 100%; border-radius: 50rpx; margin-bottom: 40rpx; padding: 20rpx;}
.primary { background: #1abc8c; color: #fff; border: none; }
.danger { background: #ff6b6b; color: #fff; border: none; }

/* 分享菜单遮罩 */
.wx_check { margin-top: 10rpx; margin-bottom: 10rpx;text-align: center; font-size: 24rpx; color: #333; font-family: monospace; }
.share-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

/* 分享菜单容器 */
.share-menu {
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  /* padding-bottom: 20rpx ; */
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 分享菜单项 */
.share-menu-item {
  align-items: center;
  text-align: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 32rpx;
  color: #333;
}

.share-menu-item:active {
  background: #f5f5f5;
}


/* 全屏图片样式（适配微信截图） */
.full-screen-img {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  z-index: 999;
  display: flex;
  justify-content: center;
  /* 核心改：图片上对齐，优先显示上半部分 */
  align-items: flex-start; 
  padding-top: 0; /* 顶部无间距，图片顶格显示 */
}
/* 关键：图片铺满上半区，适配截图 */
.full-screen-img image {
  width: 100%;
  /* 高度设为屏幕80%（微信截图核心区域），确保上半区完整显示 */
  height: 80vh; 
  /* aspectFill：保持宽高比，铺满容器（优先显示图片上半部分） */
  object-fit: cover; 
}
