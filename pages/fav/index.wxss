.page { padding: 24rpx; background: #f6f8f7; min-height: 100vh; box-sizing: border-box; }
.title { font-size: 34rpx; font-weight: 700; color: #0b5132; margin-bottom: 20rpx; }
.card { background: #fff; border-radius: 16rpx; padding: 20rpx; margin-bottom: 16rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); }
.row { display: flex; align-items: center; gap: 12rpx; }
.info { flex: 1; }
.name { font-size: 30rpx; font-weight: 600; color: #0b5132; }
.meta { margin-top: 6rpx; color: #6f8a7b; font-size: 24rpx; }
.play { min-width: 120rpx; }
.actions { margin-top: 14rpx; display: flex; gap: 12rpx; }
.ghost { flex: 1; color: #1abc8c; border: 1px solid #1abc8c; background: #f4fffa; }
.warn { flex: 1; color: #ff6b6b; border: 1px solid #ff6b6b; background: #fff1f1; }
.empty { text-align: center; color: #9ab3a3; margin-top: 80rpx; }
