.page { min-height: 100vh; padding: 40rpx 32rpx 160rpx; background: linear-gradient(180deg, #fff 0%, #fff 100%); box-sizing: border-box; }
.top { text-align: center; margin-bottom: 24rpx; }
.slogan { font-size: 24rpx; color: #7c9087; }
.title { font-size: 34rpx; font-weight: 700; color: #0b5132; margin-bottom: 20rpx; }
.card { background: #fff; border-radius: 16rpx; padding: 20rpx; margin-bottom: 16rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); }
.row { display: flex; align-items: center; gap: 12rpx; }
.info { flex: 1; }
.name { font-size: 30rpx; font-weight: 600; color: #0b5132; }
.meta { margin-top: 6rpx; color: #6f8a7b; font-size: 24rpx; }
.play { min-width: 120rpx;background: #1abc8c; }
.actions { margin-top: 14rpx; display: flex; gap: 12rpx; }
.btn { flex: 1; border-radius: 12rpx; }
.ghost { color: #1abc8c; border: 1px solid #1abc8c; background: #f4fffa; }
.warn { color: #ff6b6b; border: 1px solid #ff6b6b; background: #fff1f1; }
.info-ghost {  color: #1f72c6; border: 1px solid #1f72c6; background: #f3f8ff; }
.empty { text-align: center; color: #9ab3a3; margin-top: 80rpx; }

/* 分享菜单遮罩 */
.wx_check { margin-top: 10rpx; margin-bottom: 10rpx;text-align: center; font-size: 24rpx; color: #333; font-family: monospace; }

.share-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

/* 分享菜单容器 */
.share-menu {
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  /* padding-bottom: 20rpx ; */
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 分享菜单项 */
.share-menu-item {
  align-items: center;
  text-align: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 32rpx;
  color: #333;
}

.share-menu-item:active {
  background: #f5f5f5;
}