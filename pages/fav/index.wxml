<view class="page">
  <view class="top">
    <text class="slogan">人类的本质是复读机-.-</text>
  </view>
  <view class="title">我的收藏</view>
  <view wx:if="{{list.length}}">
    <block wx:for="{{list}}" wx:key="id">
      <view class="card">
        <view class="row">
          <view class="info">
            <view class="name">{{item.name}}</view>
            <view class="meta">时长：{{item.duration}} 秒</view>
            <view class="meta">时间：{{item.startedAtText || '--'}}</view>
          </view>
          <button class="play" size="mini" bindtap="onPlay" data-id="{{item.id}}">播放</button>
        </view>
        <view class="actions">
      <button class="btn ghost" data-id="{{item.id}}" bindtap="onRename">重命名</button>
      <button class="btn warn" data-id="{{item.id}}" bindtap="onRemove">删除</button>
      <button class="btn info-ghost" data-id="{{item.id}}" bindtap="onShare">分享</button>
    </view>
      </view>
    </block>
  </view>
  <view class="empty" wx:else>暂无收藏</view>



  <!-- 分享菜单弹窗 -->
<view class="share-mask" wx:if="{{showShareMenu}}" bindtap="hideShareMenu">
  <view class="share-menu" catchtap="">
     <!-- 直接分享 - 使用 button -->
     <button 
      class="share-menu-item share-btn" 
      open-type="share"
      data-type="direct"
      bindtap="onDirectShare"
      data-action="direct"
    >
      <text>直接分享</text>
    </button>
    
    <!-- 阅后即焚 - 使用 button -->
    <button 
      class="share-menu-item share-btn" 
      open-type="share"
      data-type="burnRead"
      bindtap="onBurnReadShare"
      data-action="burn"
    >
      <text>仅可查看一次</text>
    </button>
    <view class="wx_check">分享后,微信后台审核成功后,朋友方可收听</view>
  </view>
</view>

</view>
