.page { min-height: 100vh; padding: 40rpx 32rpx; background: linear-gradient(180deg, #f6fff9 0%, #f2f6f3 100%); box-sizing: border-box; }
.hero { margin-bottom: 40rpx; }
.title { font-size: 38rpx; font-weight: 700; color: #0b5132; }
.subtitle { display: block; margin-top: 10rpx; color: #5f776a; }
.wave { display: flex; align-items: flex-end; height: 200rpx; margin: 20rpx 0; background: #e9f5ed; border-radius: 16rpx; padding: 20rpx; box-sizing: border-box; }
.wave-bar { flex: 1; margin: 0 4rpx; background: #1abc8c; border-radius: 8rpx 8rpx 2rpx 2rpx; transition: height 0.2s ease; }
.timer { text-align: center; font-size: 48rpx; color: #0b5132; margin: 10rpx 0 30rpx; font-family: monospace; }
.controls { display: flex; gap: 16rpx; }
.btn { flex: 1; border-radius: 50rpx; }
.primary { background: #1abc8c; color: #fff; border: none; }
.danger { background: #ff6b6b; color: #fff; border: none; }
.ghost { color: #1abc8c; border-color: #1abc8c; }
.last { margin-top: 50rpx; }
.label { color: #5f776a; }
.card { margin-top: 12rpx; padding: 20rpx; border-radius: 16rpx; background: #fff; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); }
.card-title { font-size: 32rpx; font-weight: 600; color: #0b5132; }
.card-meta { margin-top: 6rpx; color: #6f8a7b; font-size: 26rpx; }
.card-actions { margin-top: 12rpx; display: flex; gap: 12rpx; }
.empty { display: block; margin-top: 16rpx; color: #9ab3a3; }
