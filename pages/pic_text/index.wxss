page {
  background: #f6f6f6;
}

.page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding-bottom: 160rpx;
  box-sizing: border-box;
}

.header {
  position: relative;
  padding: 24rpx 32rpx;
  text-align: center;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
}

.title-btn {
  position: absolute;
  right: 32rpx;
  top: 20rpx;
}

.feed {
  flex: 1;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
}

.card {
  margin-bottom: 24rpx;
  padding: 24rpx;
  border-radius: 18rpx;
  background: #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}

.text-card {
  font-size: 32rpx;
  line-height: 1.5;
}

.media-card {
  padding: 0;
  overflow: hidden;
}

.media-img {
  width: 100%;
  display: block;
}

.video-preview {
  position: relative;
  width: 100%;
  padding-top: 56%;
  background: #1f1f1f;
}

.video-mask {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: rgba(0, 0, 0, 0.3);
}

.video-icon {
  font-size: 56rpx;
  margin-bottom: 8rpx;
}

.video-tips {
  font-size: 24rpx;
}

.empty {
  margin-top: 120rpx;
  text-align: center;
  color: #999;
}

.fab {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 50rpx;
  display: flex;
  justify-content: center;
  gap: 24rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.fab-btn {
  flex: 1;
  border-radius: 999rpx;
}

.fab-btn.solid {
  background: #ff7a45;
  color: #fff;
  border: none;
}

.fab-btn.ghost {
  color: #ff7a45;
  border: 1px solid #ff7a45;
  background: #fff;
}
.fab-btn.share {
  color: #000;
  /* border: 1px solid #626262; */
  background: #19A318FF;
}
