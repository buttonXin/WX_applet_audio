.container {
 min-height: 100vh; padding: 40rpx 32rpx 48rpx; box-sizing: border-box; display: flex; flex-direction: column;
  background: linear-gradient(180deg, #fff 0%, #fff 100%);
}

/* 倒计时区域 */
.countdown-wrap {
  text-align: center;
  margin-bottom: 20rpx;
}

.countdown-text {
  font-size: 28rpx;
  color: #e74c3c;
  font-weight: 500;
}

.image-box {
  width: 100%;
  height: 400rpx;
  border: 2rpx solid #333;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;
  background-color: #fafafa;
  overflow: hidden;
}

.display-image {
  width: 100%;
  height: 100%;
}

.loading-box {
  display: flex;
  justify-content: center;
  align-items: center;
}

.placeholder-text {
  font-size: 32rpx;
  color: #999;
}


.action-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  /* border: 2rpx solid #333; */
  background-color: #19A318FF;
  font-size: 32rpx;
  margin-bottom: 100rpx;
  color: #fff;
  border-radius: 10rpx;
}

.action-btn::after {
  border: none;
  color: #19A318FF;
}
