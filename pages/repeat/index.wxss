.page { min-height: 100vh; padding: 40rpx 32rpx 160rpx; background: linear-gradient(180deg, #fff 0%, #fff 100%); box-sizing: border-box; }
.top { text-align: center; margin-bottom: 24rpx; }
.slogan { font-size: 24rpx; color: #7c9087; }
.header { margin-bottom: 20rpx; }
.title { font-size: 36rpx; font-weight: 700; color: #0b5132; }
.subtitle { color: #5f776a; margin-top: 6rpx; display: block; }
.picker { margin: 16rpx 0 30rpx; padding: 18rpx 20rpx; background: #fff; border-radius: 12rpx; box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.05); color: #0b5132; }
.player { padding: 24rpx; background: #fff; border-radius: 18rpx; box-shadow: 0 10rpx 26rpx rgba(0,0,0,0.08); }
.time { font-family: monospace; color: #0b5132; }
.bar { margin: 16rpx 0; height: 10rpx; background: #e6efea; border-radius: 999rpx; overflow: hidden; }
.bar-fill { height: 100%; background: linear-gradient(90deg, #1abc8c, #2fd7a8); }
.actions { padding: 24rpx; display: flex; gap: 12rpx; margin-top: 12rpx; align-items: center; }
.main { flex: 1; background: #1abc8c; color: #fff; border: none; border-radius: 12rpx; }
.slider { flex: 1; }
