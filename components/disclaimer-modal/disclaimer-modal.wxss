/* 遮罩层：覆盖全屏，不可点击穿透 */
.disclaimer-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99999; /* 最高层级，覆盖所有页面内容 */
}

/* 弹窗内容 */
.disclaimer-content {
  width: 85%;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 标题 */
.disclaimer-title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}

/* 声明文本（滚动适配长内容） */
.disclaimer-text {
  max-height: 50vh;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 30rpx;
}

.text-item {
  margin-bottom: 15rpx;
}

/* 按钮布局 */
.disclaimer-btns {
  display: flex;
  gap: 20rpx;
}

.btn-exit, .btn-agree {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  border-radius: 8rpx;
}

.btn-exit {
  background: #f5f5f5;
  color: #666;
}

.btn-agree {
  background: #007AFF;
  color: #fff;
}